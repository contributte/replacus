{
  "name": "contributte/replacus",
  "description": "Latte-based replacer for simple texts.",
  "keywords": [
    "latte",
    "replaces"
  ],
  "license": "MPL-2.0",
  "type": "library",
  "homepage": "https://github.com/contributte/replacus",
  "authors": [
    {
      "name": "Milan Felix Å ulc",
      "homepage": "https://f3l1x.io"
    }
  ],
  "require": {
    "php": ">=7.1",
    "latte/latte": "~2.4.8 || ~2.5.1"
  },
  "require-dev": {
    "ninjify/qa": "^0.8.0",
    "phpunit/phpunit": "^7.5.1"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\Replacus\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Cases\\Contributte\\Replacus\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tests": [
      "phpunit tests --colors=always"
    ],
    "coverage": [
      "phpdbg -qrr vendor/bin/phpunit tests --colors=always -c tests/coverage.xml"
    ],
    "phpstan-install": [
      "mkdir -p temp/phpstan",
      "composer require -d temp/phpstan phpstan/phpstan:^0.10",
      "composer require -d temp/phpstan phpstan/phpstan-deprecation-rules:^0.10",
      "composer require -d temp/phpstan phpstan/phpstan-nette:^0.10",
      "composer require -d temp/phpstan phpstan/phpstan-strict-rules:^0.10"
    ],
    "phpstan": [
      "temp/phpstan/vendor/bin/phpstan analyse -l max -c phpstan.neon src"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1.x-dev"
    }
  }
}
